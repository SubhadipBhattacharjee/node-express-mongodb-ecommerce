<body class="hold-transition login-page">
<div class="login-box">
  <div class="login-logo">
    <a href=""><b>Ecommerce Site</b></a>
  </div>

  
  <!-- /.login-logo -->
  <div class="card">
    <div class="card-body login-card-body">
      <p class="login-box-msg"><b><i>Sign In to the Admin Panel</i></b></p>

      <form action="check-login" method="POST" id="admin-login-form" >
        <div class="input-group mb-3">
          <input type="email" name="email" class="form-control"  placeholder="Email" value="">
          <div class="input-group-append">
            <div class="input-group-text">
             <span class="fa fa-envelope"></span>
              <!--<i class="ionicons ion-email"></i>-->
            </div>
          </div>
        </div>
        <div class="input-group mb-3">
          <input type="password" name="password" class="form-control" placeholder="Password">
          <div class="input-group-append">
            <div class="input-group-text">
              <!--<span class="fas fa-lock"></span>-->
              <span class="fa fa-lock"></span>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-8">
            <div class="icheck-primary">
              <input type="checkbox" id="remember" name="check">
              <label for="remember">
                Remember Me
              </label>
            </div>
          </div>
          <!-- /.col -->
          <div class="col-4">
            <input type="submit" class="btn btn-primary btn-block" value="Sign In">
          </div>
          <!-- /.col -->
        </div>
      </form>

      <!--<div class="social-auth-links text-center mb-3">
        <p>- OR -</p>
        <a href="#" class="btn btn-block btn-primary">
          <i class="fab fa-facebook mr-2"></i> Sign in using Facebook
        </a>
        <a href="#" class="btn btn-block btn-danger">
          <i class="fab fa-google-plus mr-2"></i> Sign in using Google+
        </a>
      </div>-->
      <!-- /.social-auth-links -->

      <p class="mb-1">
        <a href="change-password">Forgot Your  Password?</a>
      </p>
      <!-- <p class="mb-0">
        <a href="" class="text-center">I want to change password</a>
      </p> -->
    </div>
    <!-- /.login-card-body -->
  </div>
</div>
<!-- /.login-box -->



<!-- jQuery -->
<script type="text/javascript" src="plugins/jquery/jquery.min.js"></script>
<!-- jQuery validation -->
<script type="text/javascript" src="plugins/jquery-validation/jquery.validate.min.js"></script>
<!-- Custom Js-->
<script src="dist/js/custom.js"></script>
<!-- Jquery toaster-->
<script src="plugins/toastr/toastr.min.js" type="text/javascript"></script>
<!-- Bootstrap 4 -->
<script src="plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
<!-- AdminLTE App -->
<script src="dist/js/adminlte.min.js"></script>


</body>
